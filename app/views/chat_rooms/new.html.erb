<h1>Add chat room</h1>

<%= form_for @chat_room do |f| %>
  <div class="form-group">
    <%= f.label :to %>
    <%= f.select :receiver_id, 
    	@users.map{ |user| [user.username, user.id]},
    	{ include_blank: 'Select User' }, 
    	{ autofocus: true, class: 'form-control chosen-select', required: true }
    %>

  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', required: true%>
  </div>

  <%= f.submit "Add!", class: 'btn btn-primary' %>
<% end %>